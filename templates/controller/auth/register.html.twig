{% extends 'base/base-auth.html.twig' %}

{% block title %}{{ 'register.title'|trans }}{% endblock %}

{% block body %}

    <div class="col-10 col-md-4 offset-2 auth-left-box">
        <form method="post">
            <h1 class="text-center">{{ 'form.register.headline'|trans }}</h1>
            {{ form(registrationForm) }}
        </form>
    </div>

    <div class="col-12 col-md-4 auth-right-box text-right">
        <h3>{{ 'register.descritpion.headline'|trans }}</h3>
        <p>{{ 'register.description.first'|trans }}</p>
        <p>{{ 'register.description.second'|trans }}</p>
        <a href="{{ path('user-login') }}" class="btn">{{ 'register.description.redirect'|trans }}</a>
    </div>
    
{% endblock %}
